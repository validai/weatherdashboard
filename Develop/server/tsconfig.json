{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    /* Modules */
    "module": "NodeNext", // Ensure compatibility with ES modules (for `import`/`export`).
    "moduleResolution": "NodeNext", // Use Node.js module resolution strategy.
    "esModuleInterop": true, // Allow default imports for CommonJS modules.
    "resolveJsonModule": true, // Enable importing JSON modules.

    /* Root Directory */
    "rootDir": "./server/src", // Ensure `src` is the root directory for input files.

    /* Emit */
    "outDir": "./server/dist", // Emit all compiled files to `dist`.
    "target": "ESNext", // Use the latest ECMAScript features.
    "noEmitOnError": true, // Prevent emitting files if type errors are present.

    /* Other */
    "strict": true, // Enable all strict type-checking options.
    "skipLibCheck": true, // Skip type-checking of declaration files for faster builds.
    "forceConsistentCasingInFileNames": true // Ensure case sensitivity in file names.
  },
  "include": ["./src/**/*"], // Include the `src` folder for TypeScript compilation.
  "exclude": ["node_modules", "dist"] // Exclude unnecessary folders from the build.
}
