{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020", /* Set the JavaScript language version for emitted JavaScript */
    "module": "ESNext", /* Specify what module code is generated */
    "moduleResolution": "Bundler", /* Specify how TypeScript looks up a file from a given module specifier */

    /* Input and Output Configuration */
    "rootDir": "./server/src", /* Root directory of input files relative to this file */
    "outDir": "./server/dist", /* Redirect output structure to the directory */

    /* JavaScript Support */
    "allowJs": true, /* Allow JavaScript files to be a part of your program */
    "checkJs": true, /* Enable error reporting in type-checked JavaScript files */

    /* Interop Constraints */
    "esModuleInterop": true, /* Emit additional JavaScript to ease support for importing CommonJS modules */
    "allowSyntheticDefaultImports": true, /* Allow default imports from modules with no default export */
    "forceConsistentCasingInFileNames": true, /* Ensure casing is correct in imports */

    /* Type Checking */
    "strict": true, /* Enable strict type checking options */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "exactOptionalPropertyTypes": true, /* Interpret optional property types strictly */
    "noImplicitReturns": true, /* Enable error reporting for code paths that do not explicitly return in a function */
    "noImplicitOverride": true, /* Ensure overriding members in derived classes are marked with an override modifier */
    "useUnknownInCatchVariables": true, /* Ensure 'unknown' is used for catch clause variables */
    "sourceMap": true /* Generate source maps for debugging */
  },
  "include": ["./server/src/**/*.ts"], /* Include all TypeScript files in the src directory and subdirectories */
  "exclude": ["node_modules", "server/dist"] /* Exclude node_modules and dist directories */
}
