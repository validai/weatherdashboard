{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",                /* Specifies the ECMAScript target version for generated JavaScript. */
    "module": "es2022",                /* Sets the module system for import/export compatibility. */
    "moduleResolution": "Node",    /* Determines how module paths are resolved in TypeScript. */
    "composite": true,                 /* Enables incremental compilation. */
  

    /* Input and Output Configuration */
    "rootDir": "./",         /* Defines the root directory containing source TypeScript files. */
    "outDir": "./dist",         /* Specifies the output directory for compiled JavaScript files. */

    /* JavaScript Support */
    "allowJs": true,                    /* Enables JavaScript files in the project. */
    "checkJs": true,                    /* Reports type errors in JavaScript files. */

    /* Interop Constraints */
    "esModuleInterop": true,            /* Ensures interoperability between CommonJS and ES Modules. */
    "allowSyntheticDefaultImports": true, /* Allows default imports from modules without a default export. */
    "forceConsistentCasingInFileNames": true, /* Enforces consistent casing in import paths. */

    /* Type Checking */
    "strict": true,                     /* Enables all strict type-checking options. */
    "noUnusedLocals": true,             /* Reports unused local variables. */
    "noUnusedParameters": true,         /* Reports unused function parameters. */
    "noFallthroughCasesInSwitch": true, /* Prevents fallthrough cases in switch statements. */
    "exactOptionalPropertyTypes": true, /* Enforces exact types for optional properties. */
    "noImplicitReturns": true,          /* Ensures all code paths in functions return a value. */
    "noImplicitOverride": true,         /* Requires explicitly marking overridden methods. */
    "useUnknownInCatchVariables": true, /* Uses "unknown" type for catch variables. */
    "sourceMap": true                   /* Generates source maps for easier debugging. */
  },

  /* File Inclusion and Exclusion */
  "include": ["./server/src/**/*", "./client/src/**/*"],  /* Includes all TypeScript files in the src directory and subdirectories. */
  "exclude": ["node_modules", "dist"] /* Excludes the node_modules and dist directories from compilation. */
}