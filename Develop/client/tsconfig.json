{
    "extends": "../tsconfig.json",
    "compilerOptions": {
      "rootDir": "./src",
      "outDir": "./dist",
      "target": "ES2022",
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "strict": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "noEmit": false
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  