{
    "extends": "../tsconfig.json",
    "compilerOptions": {
      "rootDir": "./src",
      "outDir": "./dist",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "strict": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "noEmit": false
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  